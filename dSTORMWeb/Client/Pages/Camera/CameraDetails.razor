@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.RichTextEditor
@using Syncfusion.Blazor.Data
@using Syncfusion.Blazor.DropDowns
<div class="row" style="display:block;">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header title">Camera</div>
            <div class="card-body">
                <div class="form-label-group">
                    <div class="col-sm-9" style="max-width:100%">
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Producer</label>
                                <InputText Class="form-control inputTextClass" @bind-Value="@model.Producer" placeholder="Producer" />
                                <ValidationMessage For="@(() => model.Producer)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Model</label>
                                <InputText Class="form-control inputTextClass" @bind-Value="@model.Model" placeholder="Model" />
                                <ValidationMessage For="@(() => model.Model)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Objcetive</label>
                                <InputText Class="form-control inputTextClass" @bind-Value="@model.Objective" placeholder="Objcetive" />
                                <ValidationMessage For="@(() => model.Objective)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Focal Length</label>
                                <InputNumber Class="form-control inputTextClass" @bind-Value="@model.FocalLength" placeholder="Focal Length" />
                                <ValidationMessage For="@(() => model.FocalLength)" />
                            </div>
                        </div>

                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Matrix Type</label>
                                <InputText Class="form-control inputTextClass" @bind-Value="@model.MatrixType" placeholder="Matrix Type" />
                                <ValidationMessage For="@(() => model.MatrixType)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Description</label>
                                <InputTextArea Class="form-control inputTextClass" @bind-Value="@model.DescriptionFORM" placeholder="Description" />
                                <ValidationMessage For="@(() => model.Description)" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public CameraViewModel model { get; set; } = new CameraViewModel();

    protected override void OnInitialized()
    {

    }
}

<style>
    .validation-message {
        color: red;
        font-size: 12px;
    }
</style>