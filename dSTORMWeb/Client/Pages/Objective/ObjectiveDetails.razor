@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.RichTextEditor
@using Syncfusion.Blazor.Data
@using Syncfusion.Blazor.DropDowns
<div class="row" style="display:block;">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header title">Microscope</div>
            <div class="card-body">
                <div class="form-label-group">
                    <div class="col-sm-9" style="max-width:100%">
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Name</label>
                                <InputText Class="form-control inputTextClass" @bind-Value="@model.Name" placeholder="Name" />
                                <ValidationMessage For="@(() => model.Name)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Eye piece</label>
                                <InputText Class="form-control inputTextClass" @bind-Value="@model.EyePiece" placeholder="Eye piece" />
                                <ValidationMessage For="@(() => model.EyePiece)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Objective lens</label>
                                <InputText Class="form-control inputTextClass" @bind-Value="@model.ObjectiveLens" placeholder="Objective lens" />
                                <ValidationMessage For="@(() => model.ObjectiveLens)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Magnification</label>
                                <InputNumber Class="form-control inputTextClass" @bind-Value="@model.Magnification" placeholder="Magnification" />
                                <ValidationMessage For="@(() => model.Magnification)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Resolution</label>
                                <InputNumber Class="form-control inputTextClass" @bind-Value="@model.Resolution" placeholder="Resolution" />
                                <ValidationMessage For="@(() => model.Resolution)" />
                            </div>
                        </div>
                        <div class="form-label-group">
                            <div class="col-sm-12" style="margin-top:10px;">
                                <label class="col-form-label labelFont">Description</label>
                                <InputTextArea Class="form-control inputTextClass" @bind-Value="@model.Description" placeholder="Description" />
                                <ValidationMessage For="@(() => model.Description)" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public ObjectiveViewModel model { get; set; } = new ObjectiveViewModel();

    protected override void OnInitialized()
    {

    }
}

<style>
    .validation-message {
        color: red;
        font-size: 12px;
    }
</style>